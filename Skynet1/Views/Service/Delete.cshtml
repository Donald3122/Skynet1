@model Skynet1.Models.Service

@{
    ViewBag.Title = "Delete Service";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">Delete Service</h2>

    <h3>Are you sure you want to delete this?</h3>

    <div class="form-group mb-3">
        <label asp-for="NameService" class="control-label"></label>
        <input asp-for="NameService" class="form-control rounded-pill" readonly />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control rounded-pill" readonly />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control rounded-pill" readonly />
    </div>

    <form asp-action="Delete">
        <div class="form-group">
            <input type="hidden" asp-for="ServiceId" />
            <input type="submit" value="Delete" class="btn btn-danger rounded-pill" />
            <a href="@Url.Action("Index", "Service")" class="btn btn-outline-secondary rounded-pill">Back to List</a>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
