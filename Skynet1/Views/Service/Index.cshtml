@model IEnumerable<Skynet1.Models.Service>

@{
    ViewBag.Title = "Service List";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">Service List</h2>

    <p>
        <a href="@Url.Action("Create", "Service")" class="btn btn-primary rounded-pill">Create New</a>
    </p>

    <table class="table table-hover table-bordered rounded-3 overflow-hidden">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().NameService)</th>
                <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NameService)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>
                        <a href="@Url.Action("Edit", "Service", new { id = item.ServiceId })" class="btn btn-sm btn-warning rounded-pill">Edit</a>
                        <a href="@Url.Action("Details", "Service", new { id = item.ServiceId })" class="btn btn-sm btn-info rounded-pill">Details</a>
                        <a href="@Url.Action("Delete", "Service", new { id = item.ServiceId })" class="btn btn-sm btn-danger rounded-pill">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
