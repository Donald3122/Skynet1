@model Skynet1.Models.Service

@{
    ViewBag.Title = "Edit Service";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">Редактировать тариф</h2>

    <form asp-action="Edit" asp-controller="Service" method="post">
        <div class="form-group mb-3">
            <label asp-for="NameService" class="control-label">Название</label>
            <input asp-for="NameService" class="form-control rounded-pill" />
            <span asp-validation-for="NameService" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Description" class="control-label">Описание</label>
            <input asp-for="Description" class="form-control rounded-pill" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Price" class="control-label">Стоимость</label>
            <input asp-for="Price" class="form-control rounded-pill" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="ServiceId" />
            <input type="submit" value="Сохранить" class="btn btn-primary rounded-pill" />
        </div>
    </form>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Service")" class="btn btn-outline-secondary rounded-pill">Назад</a>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
